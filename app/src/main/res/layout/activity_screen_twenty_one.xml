<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScreenTwentyOneActivity">
    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16sp"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="fitStart"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_11"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="step 4 of 4"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="16sp"
        android:background="@color/light_pink"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_1">

        <ProgressBar
            android:id="@+id/progress2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.375"
            android:progressDrawable="@drawable/circle_progress_bar_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/progress2"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_liveScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listing Score"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Having a high score will be easier to find in\nthe search features by your prospective\nbuyers"
                android:textSize="12sp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/yellow"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/progress2"
            app:layout_constraintLeft_toLeftOf="@id/progress2"
            app:layout_constraintRight_toRightOf="@id/progress2"
            app:layout_constraintTop_toTopOf="@id/progress2"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="45dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/linear_layout21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16sp"
        android:orientation="vertical">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Your Listing"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Title"
                android:background="@null"
                android:textSize="14sp" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 OF 35"
                android:textSize="12sp"
                android:gravity="end"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_29"/>
        <TextView
            android:layout_marginTop="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:background="@null"
                android:textSize="14sp" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 OF 1000"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_29"/>
        <TextView
            android:layout_marginTop="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feature"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_margin="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:drawableLeft="@drawable/group_915"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security"
                android:drawableLeft="@drawable/layer_9"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balcony"
                android:drawableLeft="@drawable/group_914"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>


        </LinearLayout>
        <LinearLayout
            android:layout_margin="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pool"
                android:drawableLeft="@drawable/group_911"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AC"
                android:drawableLeft="@drawable/group_912"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CCTV"
                android:drawableLeft="@drawable/group_913"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>


        </LinearLayout>
        <LinearLayout
            android:layout_margin="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gym"
                android:drawableLeft="@drawable/layer_2_12"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elevator"
                android:drawableLeft="@drawable/layer_3"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Center"
                android:drawableLeft="@drawable/layer_2"
                android:drawablePadding="4dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="normal"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:backgroundTint="@color/blue"
        android:text="Next Step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>