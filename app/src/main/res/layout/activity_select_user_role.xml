<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.user.SelectUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:src="@drawable/ic_baseline_close_24">

        </ImageView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="What is your Role?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="Before Continuing we want to \n know what your role."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal">

        </TextView>


        <LinearLayout
            android:id="@+id/linearlayout_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:background="@drawable/rectangle_1653"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/img_circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal">

            </ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/layer29"
                android:drawablePadding="20dp"
                android:gravity="start"
                android:text="I am an Owner"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/img_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ellipse_312"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal">

            </ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/layer28"
                android:drawablePadding="20dp"
                android:gravity="start"
                android:text="I am an Agent"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_property_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/img_circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ellipse_312"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal">

            </ImageView>

            <TextView
                android:id="@+id/txt_circle33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/layer27"
                android:drawablePadding="20dp"
                android:gravity="start"
                android:text="I am a Property Developer"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_continue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:backgroundTint="@color/blue"
            android:text="Continue">

        </Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>