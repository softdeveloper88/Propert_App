<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="2dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/imageView"
                android:layout_width="120sp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16sp"
                android:src="@drawable/love_2"
                tools:layout_editor_absoluteX="64dp"
                tools:layout_editor_absoluteY="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="122sp">
            <LinearLayout
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                   android:layout_margin="8dp"
                    android:background="@drawable/rectangle_1630"
                    android:padding="5sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$340,000"/>
                <TextView
                    android:layout_marginLeft="16sp"
                    android:padding="5sp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shah Tower Islamabad"/>
                <TextView
                    android:layout_marginLeft="16sp"
                    android:textSize="12sp"
                    android:drawableLeft="@drawable/pin2_1"
                    android:paddingLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaik Heights flatt no4"/>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="16sp"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/group_886"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                    <TextView
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:gravity="start"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/group_885"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <TextView
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:gravity="start"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/group_884"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1100 sqft"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>