<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScreenTwelveActivity">

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surabaya"
        android:paddingLeft="16dp"
        android:drawablePadding="12sp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16sp"
        android:background="@drawable/rectangle_1577"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent"
            android:textAllCaps="true"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/grey_60"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16sp"
            android:weightSum="2">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:drawableLeft="@drawable/pin2_1"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surabaya"
                android:layout_marginLeft="8dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16sp"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/grey_60"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16sp"
                android:weightSum="2">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:drawableLeft="@drawable/pin2_1"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surabaya"
                    android:layout_marginLeft="8dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wonokromo,Surabaya,East Java"
                android:layout_marginLeft="20dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/grey_60"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>